body {
  font-family: "Century Gothic", CenturyGothic, AppleGothic, sans-serif;
  margin: 0;
  padding: 0;
  background: #f4f4f4;
  color: #333;
}
header {
  background: #222;
  color: #fff;
  padding: 20px;
  text-align: center;
}
nav a {
  color: #fff;
  margin: 0 15px;
  text-decoration: none;
  font-weight: bold;
}
nav a:hover {
  color: #00ffcc;
}
section {
  padding: 40px;
  max-width: 900px;
  margin: auto;
}
h2 {
  margin-top: 0;
}
footer {
  background: #222;
  color: #fff;
  text-align: center;
  padding: 15px;
  position: fixed;
  bottom: 0;
  width: 100%;
}
ul {
  list-style: none;
  padding: 0;
}
li {
  background: #fff;
  margin: 15px 0;
  padding: 20px;
  border-radius: 8px;
  box-shadow: 0 2px 6px rgba(0,0,0,0.1);
}
a.button {
  display: inline-block;
  background: #00ffcc;
  color: #222;
  padding: 12px 24px;
  border-radius: 25px;
  text-decoration: none;
  font-weight: bold;
  margin-top: 15px;
}
a.button:hover {
  background: #fff;
}
